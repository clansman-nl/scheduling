{
  "name": "basebuilder/scheduling",
  "type": "library",
  "homepage": "https://github.com/clansman-nl/scheduling",
  "license": "MIT",
  "description": "CRON like behaviour with PHP. You can replace many cron jobs with a single entry when using this",
  "authors": [
    {
      "name": "Basebuilder development team",
      "email": "development@basebuilder.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Basebuilder\\Scheduling\\": "src/"
    }
  },
  "require": {
    "php"                       : "~5.5|~7.0",
    "nesbot/carbon"             : "1.21.*",
    "mtdowling/cron-expression" : "1.1.*",
    "symfony/process"           : "3.*",
    "webmozart/assert"          : "^1.3"
  },
  "suggest": {
    "symfony/console" : "When you want to use the console commands"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.5"
  },
  "scripts": {
    "test": "phpunit"
  }
}
